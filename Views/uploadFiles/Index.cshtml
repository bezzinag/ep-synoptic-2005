@model List<ep_synoptic_2005.Models.UploadFile>

@{
    ViewData["Title"] = "My Files";
}

<h2 class="mt-4 mb-3">My Uploaded Files</h2>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        You haven't uploaded any files yet.
        <a asp-action="Create" class="btn btn-sm btn-primary ms-2">Upload One</a>
    </div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-light">
            <tr>
                <th>Title</th>
                <th>Upload Date</th>
                <th>Download</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var file in Model)
            {
                <tr>
                    <td>@file.Title</td>
                    <td>@file.UploadedDate.ToString("g")</td>
                    <td>
                        <a asp-action="Download" asp-route-id="@file.Id" class="btn btn-sm btn-outline-primary">
                            Download
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
